<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:layout_weight="0"
            android:id="@+id/feed_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profpic"
            />

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:id="@+id/feed_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="mbarachel"
            />
        <ImageButton
            android:layout_weight="0"
            android:backgroundTint="#fafafa"
            android:id="@+id/more_option"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_more_horiz_24"
            
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/feed_photo"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/loading"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:duplicateParentState="true"

        >

        <ImageButton
            android:layout_weight="0"
            android:id="@+id/like_button"
            android:src="@drawable/ic_love"
            android:scaleType="centerCrop"
            android:backgroundTint="#fafafa"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <ImageButton
            android:layout_weight="0"
            android:id="@+id/comment_button"
            android:src="@drawable/ic_comment"
            android:scaleType="centerCrop"
            android:layout_marginLeft="-7dp"
            android:backgroundTint="#fafafa"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <ImageButton
            android:layout_weight="0"
            android:id="@+id/send_post_button"
            android:src="@drawable/ic_dm_icon"
            android:scaleType="centerCrop"
            android:backgroundTint="#fafafa"
            android:layout_marginLeft="-7dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>

        <ImageButton
            android:layout_weight="0"
            android:id="@+id/save_post_button"
            android:src="@drawable/ic_save_post"
            android:backgroundTint="#fafafa"
            android:scaleType="centerCrop"
            android:layout_width="48dp"
            android:layout_height="48dp"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/like_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23 Likes"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/userid_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mbarachel"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/user_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23 Maret 2021"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#a3a3a3"
        />
</LinearLayout>